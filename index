<script>
    const salarios = [
        { vigencia: '2026-01-01', valor: 1621.00 },
        { vigencia: '2025-01-01', valor: 1518.00 },
        { vigencia: '2024-01-01', valor: 1412.00 },
        { vigencia: '2023-05-01', valor: 1320.00 },
        { vigencia: '2023-01-01', valor: 1302.00 },
        { vigencia: '2022-01-01', valor: 1212.00 },
        { vigencia: '2021-01-01', valor: 1100.00 }
    ];

    // Média de IPCA para meses sem índice publicado
    const IPCA_ESTIMADO = 0.0045; 

    let pagamentos = [];

    function adicionarPagamento() {
        const v = document.getElementById('pagoValor').value;
        const d = document.getElementById('pagoData').value;
        if(v && d) {
            pagamentos.push({ valor: parseFloat(v), data: d });
            renderListaPagos();
            document.getElementById('pagoValor').value = '';
            document.getElementById('pagoData').value = '';
        }
    }

    function renderListaPagos() {
        const container = document.getElementById('listaPagos');
        container.innerHTML = pagamentos.map((p, i) => 
            `<div>• R$ ${p.valor.toFixed(2)} em ${p.data.split('-').reverse().join('/')} 
            <span style="color:red; cursor:pointer" onclick="pagamentos.splice(${i},1); renderListaPagos()">[Remover]</span></div>`
        ).join('');
    }

    function getSalario(data) {
        for (let s of salarios) {
            if (data >= new Date(s.vigencia + 'T00:00:00')) return s.valor;
        }
        return 1100.00;
    }

    document.getElementById('debtForm').onsubmit = function(e) {
        e.preventDefault();
        
        const dInicio = new Date(document.getElementById('dataInicio').value + 'T00:00:00');
        const dFim = new Date(document.getElementById('dataFim').value + 'T00:00:00');
        const pct = parseFloat(document.getElementById('percentual').value) / 100;
        const hoje = new Date();
        
        const tbody = document.querySelector('#tabelaDebitos tbody');
        tbody.innerHTML = '';

        let totalNominal = 0;
        let totalIPCA = 0;
        let totalJuros = 0;
        let totalGeral = 0;

        let atual = new Date(dInicio.getFullYear(), dInicio.getMonth(), 1);

        while (atual <= dFim) {
            const valorBase = getSalario(atual) * pct;
            
            // Diferença de meses para juros e correção
            const meses = (hoje.getFullYear() - atual.getFullYear()) * 12 + (hoje.getMonth() - atual.getMonth());
            
            const vIPCA = valorBase * (Math.pow(1 + IPCA_ESTIMADO, meses) - 1);
            const vJuros = (valorBase + vIPCA) * (0.01 * meses);
            const subtotal = valorBase + vIPCA + vJuros;

            tbody.innerHTML += `<tr>
                <td>${(atual.getMonth()+1).toString().padStart(2,'0')}/${atual.getFullYear()}</td>
                <td>${document.getElementById('diaVenc').value}</td>
                <td>R$ ${valorBase.toFixed(2)}</td>
                <td style="color:#2980b9">+ R$ ${vIPCA.toFixed(2)}</td>
                <td style="color:#d35400">+ R$ ${vJuros.toFixed(2)}</td>
                <td><strong>R$ ${subtotal.toFixed(2)}</strong></td>
            </tr>`;

            totalNominal += valorBase;
            totalIPCA += vIPCA;
            totalJuros += vJuros;
            totalGeral += subtotal;

            atual.setMonth(atual.getMonth() + 1);
        }

        // Cálculo dos Pagamentos com a mesma lógica de atualização
        let totalPagosAtualizado = 0;
        pagamentos.forEach(p => {
            const dataP = new Date(p.data + 'T00:00:00');
            const mesesP = (hoje.getFullYear() - dataP.getFullYear()) * 12 + (hoje.getMonth() - dataP.getMonth());
            const corrigido = p.valor * Math.pow(1 + IPCA_ESTIMADO + 0.01, mesesP);
            totalPagosAtualizado += corrigido;
        });

        document.getElementById('resultadoArea').style.display = 'block';
        document.getElementById('resumo').innerHTML = `
            <div class="summary-line"><span>Total Nominal:</span> <span>R$ ${totalNominal.toLocaleString('pt-BR', {minimumFractionDigits:2})}</span></div>
            <div class="summary-line"><span>Total Correção IPCA:</span> <span>R$ ${totalIPCA.toLocaleString('pt-BR', {minimumFractionDigits:2})}</span></div>
            <div class="summary-line"><span>Total Juros (1% am):</span> <span>R$ ${totalJuros.toLocaleString('pt-BR', {minimumFractionDigits:2})}</span></div>
            <div class="summary-line" style="color:#27ae60"><span>(-) Total Pago (Atualizado):</span> <span>R$ ${totalPagosAtualizado.toLocaleString('pt-BR', {minimumFractionDigits:2})}</span></div>
            <div class="summary-line final-balance"><span>SALDO DEVEDOR ATUALIZADO:</span> <span>R$ ${(totalGeral - totalPagosAtualizado).toLocaleString('pt-BR', {minimumFractionDigits:2})}</span></div>
        `;

        window.scrollTo({ top: document.getElementById('resultadoArea').offsetTop, behavior: 'smooth' });
    };
</script>

</body>
</html>
```
