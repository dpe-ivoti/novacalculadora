        <table id="tabelaDebitos">
            <thead>
                <tr>
                    <th>Mês/Ano</th>
                    <th>Vencimento</th>
                    <th>Valor Base</th>
                    <th>IPCA (Correção)</th>
                    <th>Juros (1% am)</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

        <div class="result-summary" id="resumo"></div>
    </div>
